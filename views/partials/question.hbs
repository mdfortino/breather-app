<div class="card">
  <div class="card-content">
    <a class="card-title" href="/question/{{id}}">
      {{ content }}
    </a>
  </div>
  <div class="card-action">
    <a href="/user/{{ author.id }}" class="">{{ author.email }}</a>
    <span class="question__date">{{ createdAt }}</span>
    <span class="question_answers">{{ answers.length }} Comments</span>
    <form class="" action="/question/{{id}}?_method=DELETE" method="POST">
      <button type="submit" name="button">Delete</button>
    </form>
  </div>
</div>

